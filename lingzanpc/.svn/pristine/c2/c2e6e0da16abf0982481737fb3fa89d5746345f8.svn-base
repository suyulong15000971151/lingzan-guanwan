.product{overflow: hidden;margin:0 auto 0;clear: both;}
.product .left{width:60%;display: inline-block;float:left;position:relative;overflow: hidden;height:800px}
.product .left .item{width:50px;overflow: hidden;display: inline-block;float:left;margin:200px 10px 0 50px}
.product .left .item ul{overflow: hidden;}
.product .left .item ul li{width:50px;height:50px;margin-bottom:5px;opacity: 0.6;}
.product .left .item ul li img{width:50px;height:50px}
/*这里是左右轮播*/
.product .left .show{width:800px;display: inline-block;float:left;margin-top:100px;overflow: hidden;}
.product .left .show ul{height:700px;overflow: hidden;margin-left:0}
.product .left .show ul li{float:left;display: inline-block;}

.product .left .show img{width:800px;height:700px;}
.product .left a.arror-l{width:20px;height:35px;background:url(../image/arrorl.png) no-repeat;background-size: 100% 100%;position: absolute;left:10px;top:300px}
.product .left a.arror-r{width:20px;height:35px;background:url(../image/arrorr.png) no-repeat;background-size: 100% 100%;position: absolute;left:920px;top:300px}
.product .right{width:40%;display: inline-block;float:left;overflow: hidden; border-left:1px solid #eee;box-sizing: border-box;}
.product .right .title{box-sizing: border-box;padding-right:10px;border-bottom:1px solid #eee;overflow: hidden;padding-bottom: 20px;}
.product .right .title h1{margin-left:10px;font-size: 25px;color:#000;line-height: 100px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.product .right .title p{font-size:15px;line-height: 20px;box-sizing: border-box;padding-left:10px;margin-bottom: 20px;}
.product .right .title .collect{display: inline-block;float:left;display: none;}
.product .right .title .collect em{display: inline-block;float:left;width:30px;height:30px;background:url(../image/itemcaiji.png) no-repeat;background-size: 30px 30px;margin:0 10px 0}
.product .right .title .collect i{height:30px;display: inline-block;float:left;line-height: 30px;font-size: 18px;}
.product .right .title .collect-pub{display: inline-block;float:left}
.product .right .title .collect-pub em{display: inline-block;float:left;width:30px;height:30px;background:url(../image/itemcaiji.png) no-repeat;background-size: 30px 30px;margin:0 10px 0}
.product .right .title .collect-pub i{height:30px;display: inline-block;float:left;line-height: 30px;font-size: 18px;}

.product .right .title .zans{display: inline-block;float:left;margin-left:30px}
.product .right .title .zans em{display: inline-block;float:left;width:30px;height:30px;background:url(../image/zan.png) no-repeat;background-size: 30px 30px;margin:0 10px 0}
.product .right .title .zans i{height:30px;display: inline-block;float:left;line-height: 30px;font-size: 18px;}
.product .right .title .zans{display: inline-block;float:left}
/*这是下面是样式*/
.product .right .Physics{overflow: hidden;border-bottom:1px solid #eee;padding-bottom:20px}
.product .right .Physics .color{box-sizing: border-box;padding-left:10px;margin:10px 0 0}
.product .right .Physics .color span{line-height: 50px;margin-right: 15px;font-size: 18px;color:#3b3b3b;display: inline-block;height:50px;float:left}
.product .right .Physics .color a{display: inline-block;width:50px;height:50px;}
.product .right .Physics .style a{display: inline-block;width:70px;height:50px;line-height: 50px;text-align: center;color:#000;border:1px solid #989898;background:#fff;margin-right:5px}
/*价钱*/
.product .right .price{overflow: hidden;border-bottom:1px solid #eee;}
.product .right .price span{display: inline-block;height:100px;line-height: 100px;font-size:30px;color:#000;font-weight: 600;text-indent: 10px;}
.product .right .price .add{display: inline-block;float:right;width:100px;height:30px;background:url(../image/addcai.png) no-repeat;background-size: 100% 100%;margin:30px 10px 0}
.product .right .price  .count{display: inline-block;width:120px;height:30px;box-sizing: border-box;float:right;margin-top:30px}
.product .right .price  .count i{display: inline-block;width:30px;height:30px;border:1px solid #989898;font-size:30px;font-weight: 700;line-height: 30px;float:left;box-sizing: border-box;text-align: center;}
.product .right .price  .count span{width:60px;height:30px;border-top:1px solid #989898;border-bottom:1px solid #989898;text-align: center;line-height: 30px;font-size: 20px;font-weight: 700;float:left;box-sizing: border-box;}
/*加关注*/
.product .right .follow{overflow: hidden;border-bottom:1px solid #eee;height:80px}
.product .right .follow .follow-l{overflow: hidden;display: inline-block;float:left}
.product .right .follow .follow-l img{display: inline-block;width:50px;height:50px;border-radius: 50%;float:left;margin:15px 10px 0}
.product .right .follow .follow-l span{line-height: 80px;display: inline-block;font-size: 16px;}
.product .right .follow .follow-r{overflow: hidden;display: inline-block;float:right;line-height: 80px;font-size: 16px;margin-right:50px}
/*相关产品*/
.product .right .relevant{overflow: hidden;border-bottom: 1px solid #eee;padding-bottom: 20px;}
.product .right .relevant .title{overflow: hidden;height:50px;border: none;}
.product .right .relevant .title span{display: inline-block;height: 50px;line-height: 50px;float:left;margin-left:10px;font-size: 16px;}
.product .right .relevant .title i{display: inline-block;float:right;background:url(../image/huan.png) no-repeat;background-size: 100% 100%;width:70px;height:20px;margin:15px 40px 0 0}
.product .right .relevant .content{overflow: hidden;}
.product .right .relevant .content ul li{width:100px;height:100px;float:left;margin:5px}
.product .right .relevant .content ul li img{width:100%;height:100%}
/*评论留言*/
.product .right .message{overflow: hidden;}
.product .right .message .leave{height:50px;line-height: 50px;color:#000;font-size: 16px;text-indent: 10px;}
.product .right .message .leave i{color:#989898;margin-left:10px}
.product .right .message .ping{overflow: hidden;display: flex;}
.product .right .message .ping input[type="text"]{height:40px;flex: 1;display: inline-block;margin:0 10px 0 10px}
.product .right .message .ping button{display: inline-block;height:40px;background:red;width:70px;display: inline;outline: none;margin-right:50px;border: none;background:url(../image/fasong_03.png) no-repeat;background-size: 100% 100%;}
.product .right .message .person{overflow: hidden;margin-top:20px}
.product .right .message .person ul{overflow: hidden;}
.product .right .message .person ul li{width:90%;border-bottom: 1px solid #eee;margin:0 auto 0;display: flex;padding:20px 0}
.product .right .message .person ul li .pson{display: inline-block;height:100%;float:left;overflow: hidden;}
.product .right .message .person ul li .pson img{width:40px;height:40px;float:left;border-radius: 50%;margin-right:20px}
.product .right .message .person ul li .text{display: inline-block;float:right;flex: 1;font-size: 16px;line-height: 25px;}
.product .right .message .person ul li .text span{color:#989898}



/*添加的class*/
.opa{opacity: 1 !important;}

@media only screen and (min-width: 1600px) and (max-width: 1920px) {
.product .left{width:60%;display: inline-block;float:left;position:relative;overflow: hidden;}
.product .right{width:40%;display: inline-block;float:left;overflow: hidden; border-left:1px solid #eee;box-sizing: border-box;}

.product .right .relevant .content ul li{width:110px;height:110px;float:left;margin:5px}
.product .right .relevant .title i{margin-right:100px}


}

@media only screen and (min-width: 1000px) and (max-width: 1600px) {
	
	.product .left{width:60%;display: inline-block;float:left;position:relative;overflow: hidden;}
	.product .left .show{width:500px;display: inline-block;float:left;margin-top:100px;overflow: hidden;}
.product .left .show ul{height:400px;overflow: hidden;margin-left:0}
.product .left .show ul li{float:left;display: inline-block;}
.product .left a.arror-r{width:20px;height:35px;background:url(../image/arrorr.png) no-repeat;background-size: 100% 100%;position: absolute;left:630px;top:300px}
.product .left .show img{width:500px;height:400px;}
	
	
	
	
.product .right{width:40%;display: inline-block;float:left;overflow: hidden; border-left:1px solid #eee;box-sizing: border-box;}
.product .right .Physics .style a{display: inline-block;width:60px;height:40px;line-height: 40px;text-align: center;color:#000;border:1px solid #989898;background:#fff;margin-right:5px}	
}

.rotates{transform: rotate(180deg);}
