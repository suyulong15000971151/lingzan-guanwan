		{{{include file="general/general.header.html"}}}
		<link rel="stylesheet" href="{{{$static_url}}}/css/selffan.css" />
		<!--这里是个人简介-->
		<div class="manpeople">
			<div class="man-box">
				<div class="potato">
					<img src="{{{$userInfo.avatar}}}" alt="{{{$userInfo.nickname}}}" />
				</div>
				<div class="explain">
					<h2>{{{$userInfo.nickname}}}</h2>
					<p>{{{if $userInfo.groupid == 10 || $userInfo.groupid == 20}}}<i></i>{{{/if}}}<span>{{{if $userInfo.sex == 1}}} 男 {{{else if $userInfo.sex == 2}}} 女 {{{else if $userInfo.sex == 0}}} 保密 {{{/if}}} {{{$address}}} {{{if $userInfo.groupid == 0}}} 普通用户 {{{else if $userInfo.groupid == 10}}} 设计师 {{{else if $userInfo.groupid == 20}}} 品牌 {{{/if}}}</span></p>
					<strong>{{{$userInfo.signature}}}</strong>
				</div>
			</div>
		</div>
		<!--这里是个人内容导航-->
		<div class="man-nav">
			<div class="navigation">
				{{{if $partInCount != 0}}}
				<a href="/member/library/{{{$userInfo.userid}}}">
					{{{if $userInfo.userid == $userid}}}
					<span>{{{$userInfo.librarycount}}}</span>
					<p>我的项目</p>
					{{{else}}}
					<span>{{{$libraryCount}}}</span>
					<p>他的项目</p>
					{{{/if}}}
				</a>
				<a href="/member/partInProject/{{{$userInfo.userid}}}">
					<span>{{{$partInCount}}}</span>
					<p>参与项目</p>
				</a>
				{{{else}}}
				<a href="/member/library/{{{$userInfo.userid}}}">
					{{{if $userInfo.userid == $userid}}}
					<span>{{{$userInfo.librarycount}}}</span>
					{{{else}}}
					<span>{{{$libraryCount}}}</span>
					{{{/if}}}
					<p>项目</p>
				</a>
				{{{/if}}}
				<a href="/member/collection/{{{$userInfo.userid}}}">
					<span>{{{$userInfo.productcount}}}</span>
					<p>产品</p>
				</a>
				<a href="/member/note/{{{$userInfo.userid}}}">
					<span>{{{$userInfo.notecount}}}</span>
					<p>笔记</p>
				</a>
				<a href="/member/follow/{{{$userInfo.userid}}}">
					<span>{{{$userInfo.followcount}}}</span>
					<p>关注</p>
				</a>
				<a href="/member/fans/{{{$userInfo.userid}}}" class="man-act">
					<span>{{{$userInfo.fanscount}}}</span>
					<p>粉丝</p>
				</a>
				<a href="/member/friend/{{{$userInfo.userid}}}" >
					<span>{{{$userInfo.friendcount}}}</span>
					<p>好友</p>
				</a>
			</div>
		</div>
		<div class="man-show">

			{{{foreach from=$fans item=item}}}
			<div class="man-item">
				<div class="item-box">
					<a href="/member/library/{{{$item.user.userid}}}">
						<div class="big-img">
							<img src="{{{$item.user.avatar}}}" alt="" />
							<h4>{{{$item.user.nickname}}}</h4>
						</div>
						<p>{{{$item.user.librarycount}}} 项目 &nbsp;{{{$item.user.productcount}}} 产品</p>
						<div class="small">
							{{{foreach from=$item.pro item=item2}}}
							<img src="{{{$item2.smallpic}}}" alt="" />
							{{{/foreach}}}
						</div>
					</a>
					{{{if $userInfo.userid == $userid}}}
					<div class="edit" onClick="addFollow({{{$item.user.userid}}})">添加关注</div>
					<div class="remove" onClick="cancelFan({{{$item.user.userid}}})">移除粉丝</div>
					{{{/if}}}
				</div>
			</div>
			{{{/foreach}}}

		</div>
		<script src="{{{$static_url}}}/js/index.js"></script>

		<script>
		</script>
	</body>

</html>
<script>
	//添加关注
	function addFollow(userid) {

		$.ajax({
          url:'/member/addFollow',
          type:"post",
          data:{userid:userid},
          success:function(ret){

              if(ret != ''){

                  var jsonarray = eval('('+ret+')');
                  var msg = jsonarray.msg;
                  var code = jsonarray.code;
                  alert(msg);
                  if(code == 200) {
                 	 window.location.href = "/member/fans"; 
              	  }
               }

          },   
          error:function(){  
              alert('网络异常，请稍后再试');
              return false;
          }

      	})
	}

	//移除粉丝
	function cancelFan(userid) {

		var r = confirm("确定移除该粉丝吗");
	    if(r == false){
	       return false;
	    }
		$.ajax({
          url:'/member/cancelFan',
          type:"post",
          data:{userid:userid},
          success:function(ret){

              if(ret != ''){

                  var jsonarray = eval('('+ret+')');
                  var msg = jsonarray.msg;
                  var code = jsonarray.code;
                  alert(msg);
                  if(code == 200) {
                 	 window.location.href = "/member/fans"; 
              	  }
               }

          },   
          error:function(){  
              alert('网络异常，请稍后再试');
              return false;
          }

      	})

	}
</script>