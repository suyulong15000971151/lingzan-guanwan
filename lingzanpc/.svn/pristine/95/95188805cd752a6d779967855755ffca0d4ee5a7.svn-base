											if({{{$myInfo.userid}}} !=  n.userid) {
												if(n.alreadyZan == 0) {
												str += '<span onclick="fabulous('+n.id+')"></span><input type="hidden" id="puserid" value="'+n.userid+'" /><i class="zan_'+n.id+'">'+n.zancount+'</i>';
												}else{

